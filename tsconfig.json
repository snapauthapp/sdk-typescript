{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist", "tests"]
}
